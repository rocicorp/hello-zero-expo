{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": ["src"]
}
